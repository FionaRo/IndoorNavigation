<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
                                             xmlns:app="http://schemas.android.com/apk/res-auto"
                                             xmlns:tools="http://schemas.android.com/tools"
                                             android:id="@+id/container"
                                             android:layout_width="match_parent"
                                             tools:context=".views.MainActivity" android:layout_height="match_parent">
    <Spinner
            android:layout_width="0dp"
            android:layout_height="32dp"
            android:id="@+id/naviation_methods" app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="16dp"
            app:layout_constraintEnd_toEndOf="parent" android:layout_marginEnd="16dp" android:layout_marginTop="16dp"
            app:layout_constraintTop_toTopOf="parent" app:layout_constraintHorizontal_bias="0.494"/>
    <com.mapbox.mapboxsdk.maps.MapView
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:id="@+id/mapView"
            app:layout_constraintTop_toBottomOf="@+id/myLinkovTowers" android:layout_marginEnd="16dp"
            app:layout_constraintEnd_toEndOf="parent" android:layout_marginStart="16dp"
            app:layout_constraintStart_toStartOf="parent" android:layout_marginBottom="16dp"
            app:layout_constraintBottom_toBottomOf="parent" android:layout_marginTop="8dp"/>
    <TextView
            android:text="All Towers: 0"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:id="@+id/allTowers" app:layout_constraintStart_toStartOf="parent" android:layout_marginStart="16dp"
            android:layout_marginTop="12dp" app:layout_constraintTop_toBottomOf="@+id/naviation_methods"
            app:layout_constraintEnd_toEndOf="parent" android:layout_marginEnd="16dp" android:visibility="gone"/>
    <TextView
            android:text="CellId. Found: 0. Not found: 0"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:id="@+id/cellIdTowers" android:layout_marginTop="8dp"
            app:layout_constraintTop_toBottomOf="@+id/allTowers" app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="16dp" app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginEnd="16dp" android:visibility="gone"/>
    <TextView
            android:text="MyLinkov. Found: 0. Not found: 0"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:id="@+id/myLinkovTowers" android:layout_marginTop="8dp"
            app:layout_constraintTop_toBottomOf="@+id/cellIdTowers" app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="16dp" app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginEnd="16dp" android:visibility="gone"/>
</android.support.constraint.ConstraintLayout>